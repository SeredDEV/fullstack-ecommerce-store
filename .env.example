# Variables de entorno para desarrollo y producción
# Copiar este archivo como .env y ajustar los valores según sea necesario

# Configuración del Servidor
NODE_ENV=production
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please

# Base de Datos MongoDB
MONGODB_URI=mongodb://admin:password123@localhost:27017/fullstack_store?authSource=admin
MONGODB_DB_NAME=fullstack_store

# Redis Cache
REDIS_URL=redis://:redis123@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Configuración del Cliente
VITE_API_URL=http://localhost:5000

# Configuración CORS (separado por comas)
CORS_ORIGINS=http://localhost:5001,http://localhost:5173

# Configuración de Email (opcional)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# Configuración de Almacenamiento (opcional)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
